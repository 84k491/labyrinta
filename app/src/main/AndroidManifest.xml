<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bakar.labyrinta">
    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="bakar.labyrinta.LevelBuyActivity"
            android:theme="@style/Theme.IAPTheme" />
        <activity
            android:name="bakar.labyrinta.TutorialActivity"
            android:theme="@style/Theme.IAPTheme" />
        <activity
            android:name="bakar.labyrinta.ConfirmationActivity"
            android:theme="@style/Theme.IAPTheme" />
        <activity android:name="bakar.labyrinta.LevelSelectActivity"
            android:screenOrientation="portrait" />
        <activity android:name="bakar.labyrinta.ShopActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="bakar.labyrinta.ResearchActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="bakar.labyrinta.SettingsActivity"
            android:theme="@style/Theme.IAPTheme" />
        <activity android:name="bakar.labyrinta.MenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="bakar.labyrinta.GameActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="bakar.labyrinta.EndActivity"
            android:theme="@style/Theme.IAPTheme" />
        <activity
            android:name="bakar.labyrinta.BonusActivity"
            android:theme="@style/Theme.IAPTheme" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1080418191506746~9374299748"/>
    </application>

</manifest>